<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABGAlmacenPTL.Pages.PTL.RepartirArticuloPage"
             Title="Repartir Artículo"
             BackgroundColor="#B06000">

    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto,Auto,Auto,*,Auto" RowSpacing="15">
            
            <!-- Título -->
            <Label 
                Grid.Row="0"
                Text="REPARTIR ARTICULO"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalTextAlignment="Center"
                BackgroundColor="#808080"
                Padding="10"/>

            <!-- Campo de lectura de código -->
            <Border Grid.Row="1" BackgroundColor="White" CornerRadius="5" Padding="0">
                <Entry 
                    x:Name="txtLecturaCodigo"
                    Placeholder="Escanear o introducir código"
                    FontSize="16"
                    MaxLength="36"
                    Completed="OnCodigoCompleted"
                    TextChanged="OnCodigoTextChanged"/>
            </Border>

            <!-- Selector de puesto con color -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,60" ColumnSpacing="10">
                <Label 
                    Grid.Column="0"
                    Text="Puesto:"
                    FontSize="14"
                    TextColor="White"
                    VerticalOptions="Center"/>
                
                <Picker 
                    x:Name="pickerPuesto"
                    Grid.Column="1"
                    FontSize="14"
                    BackgroundColor="White"
                    SelectedIndexChanged="OnPuestoSeleccionChanged"/>
                
                <BoxView 
                    x:Name="colorPuesto"
                    Grid.Column="2"
                    Color="White"
                    CornerRadius="3"/>
            </Grid>

            <!-- Información del artículo -->
            <Border Grid.Row="3" BackgroundColor="#C0C0C0" CornerRadius="8" Padding="15">
                <VerticalStackLayout Spacing="12">
                    
                    <!-- Código -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="Código:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblArticulo" Text="-" FontSize="14" BackgroundColor="White" Padding="5"/>
                    </Grid>

                    <!-- Nombre -->
                    <Label 
                        x:Name="lblNombreArticulo" 
                        Text="-"
                        FontSize="14"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        BackgroundColor="White"
                        Padding="10"
                        MinimumHeightRequest="60"/>

                    <!-- EAN13 -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="EAN13:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblEAN13" Text="-" FontSize="14" BackgroundColor="White" Padding="5"/>
                    </Grid>

                    <!-- STD -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="STD:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblSTD" Text="-" FontSize="14" BackgroundColor="White" Padding="5"/>
                    </Grid>

                    <!-- Peso y Volumen -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <!-- Peso -->
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="Peso" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                            <Label x:Name="lblPeso" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                        
                        <!-- Volumen -->
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Volumen" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                            <Label x:Name="lblVolumen" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- Botón Salir -->
            <Button 
                Grid.Row="4"
                x:Name="btnSalir"
                Text="SALIR"
                BackgroundColor="#808080"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="8"
                Clicked="OnSalirClicked"/>

        </Grid>
    </ScrollView>

</ContentPage>
