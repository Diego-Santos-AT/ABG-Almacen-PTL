<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABGAlmacenPTL.Pages.PTL.UbicarBACPage"
             Title="Ubicar BAC"
             BackgroundColor="#B06000">

    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto,Auto,Auto,*,Auto" RowSpacing="15">
            
            <!-- Título -->
            <Label 
                Grid.Row="0"
                Text="UBICAR BAC"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalTextAlignment="Center"
                BackgroundColor="#808080"
                Padding="10"/>

            <!-- Campo de lectura de código -->
            <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="5" Padding="0" HasShadow="True">
                <Entry 
                    x:Name="txtLecturaCodigo"
                    Placeholder="Escanear Ubicación o BAC"
                    FontSize="16"
                    MaxLength="36"
                    Completed="OnCodigoCompleted"
                    TextChanged="OnCodigoTextChanged"/>
            </Frame>

            <!-- Estado del BAC -->
            <Frame Grid.Row="2" BackgroundColor="#C0C0C0" CornerRadius="8" Padding="15" HasShadow="True">
                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                    
                    <!-- Opciones de estado -->
                    <Label Grid.Row="0" Text="Estado del BAC:" FontSize="14" FontAttributes="Bold"/>
                    
                    <HorizontalStackLayout Grid.Row="1" Spacing="15">
                        <RadioButton 
                            x:Name="rbCerrar"
                            Content="Cerrar BAC"
                            FontSize="14"
                            GroupName="Estado"/>
                        
                        <RadioButton 
                            x:Name="rbAbrir"
                            Content="Abrir BAC"
                            FontSize="14"
                            GroupName="Estado"
                            IsChecked="True"/>
                    </HorizontalStackLayout>

                    <!-- Botón Cancelar -->
                    <Button 
                        Grid.Row="2"
                        x:Name="btnCancelar"
                        Text="CANCELAR"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        FontSize="14"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="5"
                        Clicked="OnCancelarClicked"/>
                </Grid>
            </Frame>

            <!-- Información del BAC y Ubicación -->
            <Frame Grid.Row="3" BackgroundColor="#C0C0C0" CornerRadius="8" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    
                    <!-- Ubicación -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="Ubicación:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblUbicacion" Text="-" FontSize="14" BackgroundColor="White" Padding="5"/>
                    </Grid>

                    <!-- BAC -->
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="BAC:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblBAC" Text="-" FontSize="14" FontAttributes="Bold" BackgroundColor="White" Padding="5"/>
                        <Label Grid.Column="2" x:Name="lblEstadoBAC" Text="-" FontSize="12" BackgroundColor="White" Padding="5" MinimumWidthRequest="80" HorizontalTextAlignment="Center"/>
                    </Grid>

                    <!-- Grupo y Tablilla -->
                    <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="Grupo:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblGrupo" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                        
                        <Label Grid.Column="2" Text="Tablilla:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="3" x:Name="lblTablilla" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                        
                        <Label Grid.Column="4" Text="Uds:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="5" x:Name="lblUds" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                    </Grid>

                    <!-- Peso y Volumen -->
                    <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="Peso:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblPeso" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                        
                        <Label Grid.Column="2" Text="Volumen:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="3" x:Name="lblVolumen" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center"/>
                    </Grid>

                    <!-- Tipo Caja y Nombre -->
                    <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="Tipo Caja:" FontSize="14" FontAttributes="Bold"/>
                        <Label Grid.Column="1" x:Name="lblTipoCaja" Text="-" FontSize="14" BackgroundColor="White" Padding="5" HorizontalTextAlignment="Center" MinimumWidthRequest="60"/>
                        <Label Grid.Column="2" x:Name="lblNombreCaja" Text="-" FontSize="14" BackgroundColor="White" Padding="5"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- Botón Salir -->
            <Button 
                Grid.Row="4"
                x:Name="btnSalir"
                Text="SALIR"
                BackgroundColor="#808080"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="8"
                Clicked="OnSalirClicked"/>

        </Grid>
    </ScrollView>

</ContentPage>
