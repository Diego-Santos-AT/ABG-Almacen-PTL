<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABGAlmacenPTL.Pages.Generic.ErrorTransaccionPage"
             Title="Error de TransacciÃ³n"
             BackgroundColor="#F0F0F0">

    <Grid Padding="20" RowDefinitions="*,Auto,Auto,Auto">
        
        <!-- Mensaje de error -->
        <ScrollView Grid.Row="0" VerticalOptions="Center">
            <Label 
                x:Name="lblMensaje"
                FontSize="16"
                TextColor="Red"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Margin="20"/>
        </ScrollView>

        <!-- Barra de progreso -->
        <ProgressBar 
            x:Name="progressBar"
            Grid.Row="1"
            Progress="0"
            ProgressColor="Blue"
            HeightRequest="30"
            Margin="0,20,0,20"/>

        <!-- Botones -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="*,20,*"
              Margin="0,10,0,0">
            
            <Button 
                x:Name="btnAceptar"
                Grid.Column="0"
                Text="ACEPTAR"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="8"
                Clicked="OnAceptarClicked"/>
            
            <Button 
                x:Name="btnCancelar"
                Grid.Column="2"
                Text="CANCELAR"
                BackgroundColor="#F44336"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="8"
                Clicked="OnCancelarClicked"/>
        </Grid>
        
    </Grid>

</ContentPage>
