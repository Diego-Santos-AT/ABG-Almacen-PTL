<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABGAlmacenPTL.Pages.Generic.MsgBoxPage"
             Title="Mensaje"
             BackgroundColor="#F0F0F0">

    <Grid Padding="20" RowDefinitions="*,Auto">
        
        <!-- Mensaje -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="15">
                
                <!-- Icono según tipo de mensaje -->
                <Label 
                    x:Name="lblIcon"
                    FontSize="48"
                    HorizontalOptions="Center"
                    Margin="0,20,0,10"/>
                
                <!-- Mensaje principal -->
                <Label 
                    x:Name="lblMensaje"
                    FontSize="16"
                    TextColor="Red"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Center"
                    Margin="10,20,10,20"/>
                    
            </VerticalStackLayout>
        </ScrollView>

        <!-- Botones -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*,*"
              ColumnSpacing="10"
              Margin="0,20,0,0">
            
            <!-- Botón Sí/Aceptar -->
            <Button 
                x:Name="btnSi"
                Grid.Column="0"
                Text="SÍ"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="14"
                FontAttributes="Bold"
                HeightRequest="80"
                CornerRadius="8"
                IsVisible="False"
                Clicked="OnSiClicked"/>
            
            <!-- Botón No -->
            <Button 
                x:Name="btnNo"
                Grid.Column="1"
                Text="NO"
                BackgroundColor="#F44336"
                TextColor="White"
                FontSize="14"
                FontAttributes="Bold"
                HeightRequest="80"
                CornerRadius="8"
                IsVisible="False"
                Clicked="OnNoClicked"/>
            
            <!-- Botón Cancelar -->
            <Button 
                x:Name="btnCancelar"
                Grid.Column="2"
                Text="CANCELAR"
                BackgroundColor="#9E9E9E"
                TextColor="White"
                FontSize="14"
                FontAttributes="Bold"
                HeightRequest="80"
                CornerRadius="8"
                IsVisible="False"
                Clicked="OnCancelarClicked"/>
                
        </Grid>
        
    </Grid>

</ContentPage>
