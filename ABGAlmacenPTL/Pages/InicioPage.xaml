<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABGAlmacenPTL.Pages.InicioPage"
             Title="ABG Almacén PTL"
             BackgroundColor="#B06000">

    <ScrollView>
        <VerticalStackLayout 
            Padding="20"
            Spacing="15"
            VerticalOptions="Center">

            <!-- Logo / Title Section -->
            <Label 
                Text="ABG Almacén PTL"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,20,0,10"/>

            <Label 
                x:Name="lblVersion"
                Text="Versión 23.4.2"
                FontSize="14"
                TextColor="#E0E0E0"
                HorizontalOptions="Center"/>

            <Label 
                x:Name="lblComentarios"
                Text="Fecha Versión: 27/04/2023"
                FontSize="14"
                TextColor="#E0E0E0"
                HorizontalOptions="Center"
                Margin="0,0,0,30"/>

            <!-- Login Form -->
            <Frame 
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Padding="10">

                <VerticalStackLayout Spacing="15">
                    
                    <!-- Usuario -->
                    <Label 
                        Text="Usuario:"
                        FontSize="16"
                        TextColor="#E0E0E0"/>
                    <Entry 
                        x:Name="txtUsuario"
                        Placeholder="Ingrese usuario"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="50"
                        Completed="txtUsuario_Completed"
                        Unfocused="txtUsuario_Unfocused"/>

                    <!-- Contraseña -->
                    <Label 
                        Text="Contraseña:"
                        FontSize="16"
                        TextColor="#E0E0E0"
                        Margin="0,10,0,0"/>
                    <Entry 
                        x:Name="txtPassword"
                        Placeholder="Ingrese contraseña"
                        IsPassword="True"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="50"/>

                    <!-- Empresa -->
                    <Label 
                        Text="Empresa:"
                        FontSize="16"
                        TextColor="#E0E0E0"
                        Margin="0,10,0,0"/>
                    <Picker 
                        x:Name="pickerEmpresa"
                        Title="Seleccione empresa"
                        FontSize="16"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="50"/>

                    <!-- Puesto -->
                    <Label 
                        Text="Puesto:"
                        FontSize="16"
                        TextColor="#E0E0E0"
                        Margin="0,10,0,0"/>
                    <Picker 
                        x:Name="pickerPuesto"
                        Title="Seleccione puesto"
                        FontSize="16"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="50"/>

                    <!-- Buttons -->
                    <Grid 
                        ColumnDefinitions="*,*"
                        ColumnSpacing="10"
                        Margin="0,20,0,0">
                        
                        <Button 
                            Grid.Column="0"
                            x:Name="btnAceptar"
                            Text="ENTRAR"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            HeightRequest="60"
                            Clicked="OnAceptarClicked"/>
                        
                        <Button 
                            Grid.Column="1"
                            x:Name="btnCancelar"
                            Text="SALIR"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            HeightRequest="60"
                            Clicked="OnCancelarClicked"/>
                    </Grid>

                    <!-- Status Label -->
                    <Label 
                        x:Name="lblEstado"
                        Text="Iniciando..."
                        FontSize="14"
                        TextColor="#C0C0C0"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
